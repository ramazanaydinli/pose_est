<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"  tools:context=".PoseSelectionActivity">

    <TextView
        android:id="@+id/choosePoseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hareketi Seç:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"  app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/choosePoseText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/pose_option_1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sol El Kaldırma"
            android:layout_marginBottom="16dp"  android:textAllCaps="false"
            android:backgroundTint="@color/purple_200" />

        <Button
            android:id="@+id/pose_option_2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sağ Dizi Karna Çekme"
            android:layout_marginBottom="16dp"  android:textAllCaps="false"
            android:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/pose_option_3_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Şınav"
            android:layout_marginBottom="16dp"  android:textAllCaps="false"
            android:backgroundTint="@color/holo_orange_light" />

        <Button
            android:id="@+id/pose_option_4_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mekik"
            android:textAllCaps="false"
            android:backgroundTint="@color/holo_green_light" />

        <Button
            android:id="@+id/pose_option_5_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sağ Diz ile Kalça Esnet"
            android:textAllCaps="false"
            android:backgroundTint="@color/holo_red_light" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>